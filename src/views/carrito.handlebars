<div class="container-header">
    <h1 class="page-title">üõí Mi Carrito de Compras</h1>
    <div class="header-actions">
        <a href="/productos" class="btn btn-secondary">‚Üê Seguir Comprando</a>
        <a href="/profile" class="btn btn-secondary">üë§ Mi Perfil</a>
    </div>
</div>

<div class="cart-container">
    {{#if cart}}
        {{#if cart.products}}
            <div class="cart-content">
                <!-- Resumen del carrito -->
                <div class="cart-summary-header">
                    <h2>Productos en tu carrito</h2>
                    <span class="cart-count">{{cart.products.length}} {{#if (eq cart.products.length 1)}}producto{{else}}productos{{/if}}</span>
                </div>

                <!-- Lista de productos -->
                <div class="cart-items">
                    {{#each cart.products}}
                    <div class="cart-item" data-product-id="{{product._id}}">
                        <div class="item-image">
                            <div class="product-placeholder">üì¶</div>
                        </div>
                        
                        <div class="item-details">
                            <h3 class="item-name">{{product.nombre}}</h3>
                            <p class="item-description">{{product.descripcion}}</p>
                            <div class="item-code">C√≥digo: {{product.codigo}}</div>
                            <div class="item-stock">Stock disponible: {{product.stock}}</div>
                        </div>
                        
                        <div class="item-quantity">
                            <label>Cantidad:</label>
                            <div class="quantity-controls">
                                <button class="qty-btn" onclick="updateCartQuantity('{{product._id}}', {{quantity}}, -1, {{product.stock}})">-</button>
                                <span class="qty-display">{{quantity}}</span>
                                <button class="qty-btn" onclick="updateCartQuantity('{{product._id}}', {{quantity}}, 1, {{product.stock}})">+</button>
                            </div>
                        </div>
                        
                        <div class="item-price">
                            <div class="unit-price">${{product.precio}} c/u</div>
                            <div class="total-price">${{multiply product.precio quantity}}</div>
                        </div>
                        
                        <div class="item-actions">
                            <button class="btn btn-remove" onclick="removeFromCart('{{product._id}}', '{{product.nombre}}')">
                                üóëÔ∏è Eliminar
                            </button>
                        </div>
                    </div>
                    {{/each}}
                </div>

                <!-- Resumen de totales -->
                <div class="cart-footer">
                    <div class="cart-totals">
                        <div class="total-breakdown">
                            <div class="subtotal-row">
                                <span>Subtotal:</span>
                                <span class="amount">${{cart.totalAmount}}</span>
                            </div>
                            <div class="shipping-row">
                                <span>Env√≠o:</span>
                                <span class="amount">Gratis</span>
                            </div>
                            <div class="total-row">
                                <span>Total:</span>
                                <span class="amount total-amount">${{cart.totalAmount}}</span>
                            </div>
                        </div>
                        
                        <div class="checkout-actions">
                            <button class="btn btn-clear" onclick="clearCart()">
                                üóëÔ∏è Vaciar Carrito
                            </button>
                            <a href="/checkout" class="btn btn-checkout">
                                üí≥ Proceder al Checkout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="empty-cart">
                <div class="empty-icon">üõí</div>
                <h2>Tu carrito est√° vac√≠o</h2>
                <p>¬°Agrega algunos productos para comenzar tu compra!</p>
                <a href="/productos" class="btn btn-primary">
                    üõçÔ∏è Explorar Productos
                </a>
            </div>
        {{/if}}
    {{else}}
        <div class="empty-cart">
            <div class="empty-icon">üõí</div>
            <h2>Tu carrito est√° vac√≠o</h2>
            <p>¬°Agrega algunos productos para comenzar tu compra!</p>
            <a href="/productos" class="btn btn-primary">
                üõçÔ∏è Explorar Productos
            </a>
        </div>
    {{/if}}
</div>

<!-- Modal de confirmaci√≥n -->
<div id="confirm-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modal-title">‚ö†Ô∏è Confirmar Acci√≥n</h3>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <p id="modal-message"></p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeConfirmModal()">Cancelar</button>
            <button class="btn btn-danger" id="confirm-action">Confirmar</button>
        </div>
    </div>
</div>

<!-- Modal de actualizaci√≥n -->
<div id="update-modal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>‚úÖ Carrito Actualizado</h3>
            <span class="close">&times;</span>
        </div>
        <div class="modal-body">
            <p id="update-message"></p>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" onclick="closeUpdateModal()">Continuar</button>
        </div>
    </div>
</div>